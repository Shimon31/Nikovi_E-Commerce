<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/onboarding1Fragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.shimon.ecommerceapp.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/onboarding1Fragment"
        android:name="com.example.shimon.ecommerceapp.Onboarding1Fragment"
        android:label="fragment_onboarding1"
        tools:layout="@layout/fragment_onboarding1" >
        <action
            android:id="@+id/action_onboarding1Fragment_to_onboardin2Fragment"
            app:destination="@id/onboardin2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/onboardin2Fragment"
        android:name="com.example.shimon.ecommerceapp.onboardin2Fragment"
        android:label="fragment_onboardin2"
        tools:layout="@layout/fragment_onboardin2" >
        <action
            android:id="@+id/action_onboardin2Fragment_to_onboarding3Fragment"
            app:destination="@id/onboarding3Fragment" />
    </fragment>
    <fragment
        android:id="@+id/onboarding3Fragment"
        android:name="com.example.shimon.ecommerceapp.onboarding3Fragment"
        android:label="fragment_onboarding3"
        tools:layout="@layout/fragment_onboarding3" />
</navigation>